{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Hardhat",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}
